block content

	//=============== block-0 ===============
	
	.block-0


		include ../blocks/header/_header--light


		.title-field
			.container-fluid
				.title-field__inner.bg-items-place
					.row
						.col-lg

							.title-field__wrap

								.main-title
									.main-title__inner
										h2.main-title__text-2 Международные #[b онлайн олимпиады] по математике
										h1.main-title__text «Мир математики»
										h2.main-title__text-3 с 1 по 11 классы
										p.main-title__text-4.fz-medium Организатор ООО «КОМПЭДУ», УНН  790867878

								.info-title
									.info-title__item.info-title__item-date
										.info-title__item-icon
											+svg("icon-header-calendar", "info-icon")
										.info-title__text
											p.text-1 Проведение олимпиад
											p.text-2 с 11 декабря по 28 февраля

									.info-title__item.info-title__item-price
										.info-title__item-icon
											+svg("icon-header-wallet", "info-icon")
										.info-title__text
											p.text-1 Оргвзнос
											p.text-2 59 рублей

								.butn-wrap
									button.butn.butn--xl.butn--green.js_open_modal(href="#js_popup-request--1") Принять участие

						.col-lg.hidden-md-down

							.advantages
								ul.advantages__list
									li.advantages__item.advantages__item--1 Простое и удобное участие
									li.advantages__item.advantages__item--2 Доступная стоимость
									li.advantages__item.advantages__item--3 Полезные подарки


							.superhero-1
								.superhero-1__wrap
									img.superhero-1__img(src="img/mathman1.png", alt="mathman1")
					.planets
						.planet.planet--1
						.planet.planet--2
						.planet.planet--3
					
					.meteors
						.meteor.meteor--1
						.meteor.meteor--2
						.meteor.meteor--3
						.meteor.meteor--4

