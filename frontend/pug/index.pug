	//=============== /block-1 ===============
	.block-1

		.container
			.row
				.col-lg
					.block-1__inner.bg-items-place

						.limit

							.title
								h3.title__text Приветствуем вас на сайте онлайн олимпиад по математике
				
								p.title__descr Проведите олимпиаду вместе с нашим проектом! У вас разбегутся глаза от количества разнообразных и занимательных заданий, которые помогут ученикам сосредоточить своё внимание на учёбе и просто весело и с пользой провести время.

								p.title__descr Участвовать легко и удобно! Просто укажите количество учеников, их имена и фамилии, внесите ответы и сразу получите результаты и награды.


							.tiles
								.tiles__inner
									
									.tile.tile--1
										.tile__title
											h4.tile__title-text Простое и удобное участие
										.tile__descr
											p.tile__descr-text.fz-medium Минимальные затраты ваших сил и времени, чтобы подать заявку, ввести ответы и получить результаты.
									
									.tile.tile--2
										.tile__title
											h4.tile__title-text Доступная стоимость
										.tile__descr
											p.tile__descr-text.fz-medium Чем больше учеников вы привлекаете, тем меньше сумма оргвзноса.

									.tile.tile--3
										.tile__title
											h4.tile__title-text Занимательные задания
										.tile__descr
											p.tile__descr-text.fz-medium Интересные, красочные задания разной степени сложности подойдут всем участникам.

									.tile.tile--4
										.tile__title
											h4.tile__title-text Красочные наградные
										.tile__descr
											p.tile__descr-text.fz-medium Бесплатные свидетельства и благодарности для учителей и родителей, дипломы и сертификаты для победителей и участников.

									.tile.tile--5
										.tile__title
											h4.tile__title-text Подарок каждому участнику
										.tile__descr
											p.tile__descr-text.fz-medium Ни один участник не останется без полезного и интересного подарка.

									.tile.tile--6
										.tile__title
											h4.tile__title-text Благодарность родителям
										.tile__descr
											p.tile__descr-text.fz-medium Родители всех участников получат специальную благодарность.
							.nums
								.num-big.num-big--4
								.num-big.num-big--eq
								.num-big.num-big--5
								.num-big.num-big--7

	//=============== /block-1 ===============



	//=============== block-2 ===============
	.block-2
		.container
			.row
				.col-lg

					.reward
						.reward__inner

							.reward__title
								h2.reward__title-text Награды учителям и координаторам

							.reward__descr
								p.reward__descr-text.fz-medium Каждый учитель или координатор делает очень полезную работу, привлекая учеников к участию в олимпиадах. Именно поэтому мы подготовили для вас эти подарки и поощрения.

							.reward__list
								ul
									li.reward__list-item
										h4.reward__list-title Бесплатные благодарственные письма
										p.reward__list-descr.fz-medium Всем учителям и координаторам.

									li.reward__list-item
										h4.reward__list-title Бесплатные свидетельства о подготовке победителя или призёра.
										p.reward__list-descr.fz-medium Если у вас более 10 участников.

									li.reward__list-item
										h4.reward__list-title Благодарность учреждению образования.
										p.reward__list-descr.fz-medium Если у вас более 5 участников.
				
				.col-lg
					.reward-gallery
						.reward-gallery__item.reward-gallery__item--1
							img.reward-gallery__img(src="http://via.placeholder.com/477x336/f2f2f2?text=PICTURE-1", alt="picture")
						.reward-gallery__item.reward-gallery__item--2
							img.reward-gallery__img(src="http://via.placeholder.com/477x336/ededed?text=PICTURE-2", alt="picture")
						.reward-gallery__item.reward-gallery__item--3
